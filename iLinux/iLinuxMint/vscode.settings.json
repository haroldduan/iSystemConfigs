{
    "workbench.colorTheme": "Dracula Soft",
    "workbench.iconTheme": "material-icon-theme",
    "todo.timekeeping.created.enabled": true,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.tabSize": 2,
    "go.buildOnSave": "package",
    "go.lintOnSave": "package",
    "go.useLanguageServer": true,
    "go.alternateTools": {
        "go-langserver": "gopls",
    },
    "go.languageServerExperimentalFeatures": {
        "format": true,
        "autoComplete": true
    },
    "git.enableSmartCommit": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.venvPath": "/home/haroldduan/.local/share/virtualenvs",
    "python.jediEnabled": false,
    "gitea.domain": "http://rds.avatech.com.cn/",
    "gitea.port": 7070,
    "rust-client.channel": "stable",
    "editor.formatOnSave": true,
    "editor.tokenColorCustomizations": {
        "[Material Theme]": {
            "semanticHighlighting": true
        }
    },
    "hediet.vscode-drawio.theme": "dark",
    "editor.quickSuggestions": {
        "strings": true
    },
    "[html]": {
        "editor.tabSize": 4
    },
    "[css]": {
        "editor.tabSize": 4
    },
    "[javascript]": {
        // 按 "Tab" 时插入空格。该设置在 `editor.detectIndentation` 启用时根据文件内容进行重写。
        "editor.insertSpaces": true,
        // 一个制表符等于的空格数。该设置在 `editor.detectIndentation` 启用时根据文件内容进行重写。
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    // fortran 需要在 vscode 扩展中安装 fortran 语言支持后设置才生效
    "[fortran]": {
        "editor.tabSize": 2
    }
}
